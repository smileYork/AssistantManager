    </item>
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp"
        android:drawable="@drawable/bg_5">
        <shape>
           <!--  <gradient
                android:angle="360"
