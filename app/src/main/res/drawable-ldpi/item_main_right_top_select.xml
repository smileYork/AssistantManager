<?xml version="1.0" encoding="UTF-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<!--
     solid    填充。
	 stroke   描边。
	 corners  圆角。#8968CD   android:drawable="@drawable/bg_7"
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <gradient
                android:angle="360"
                android:endColor="#8968CD"
                android:startColor="#8968CD" />

            <size
                android:height="40dp"
                android:width="50dp" />
        </shape>
    </item>

</layer-list>