<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<!--
     solid    填充。
	 stroke   描边。
	 corners  圆角。

#AEEEEE#009688#8FBC8F#DCDCDC
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#DCDCDC" />

            <corners android:radius="360dip" />

            <stroke
                android:width="5dp"
                android:color="#DCDCDC" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#8FBC8F"
                android:startColor="#8FBC8F" />

            <corners android:radius="360dip" />

            <size
                android:height="40dp"
                android:width="50dp" />
        </shape>
    </item>

</layer-list>