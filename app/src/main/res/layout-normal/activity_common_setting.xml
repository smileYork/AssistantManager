<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:id="@+id/rlyout_more_pay_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/reletive_layout_bg"
        android:padding="8dp" >

        <ImageButton
            android:id="@+id/img_bt_more_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/right_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="配置支付方式"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_more_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/img_bt_more_pay_type"
            android:layout_alignBottom="@+id/img_bt_more_pay_type"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_bt_more_pay_type"
            android:text="扫码支付"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyout_more_input_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/reletive_layout_bg"
        android:padding="8dp" >

        <ImageButton
            android:id="@+id/img_bt_more_input_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/right_32" />

        <TextView
            android:id="@+id/tv_more_input_type_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="配置扫码方式"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_more_input_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/img_bt_more_input_type"
            android:layout_alignBottom="@+id/img_bt_more_input_type"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_bt_more_input_type"
            android:text="手动输入"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyout_common_setting_theme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/reletive_layout_bg"
        android:padding="8dp" >

        <ImageButton
            android:id="@+id/img_bt_common_setting_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/right_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="主题切换"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
              android:id="@+id/tv_common_setting_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/img_bt_common_setting_theme"
            android:layout_alignBottom="@+id/img_bt_common_setting_theme"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_bt_common_setting_theme"
            android:text="简洁"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="italic" />
    </RelativeLayout>

</LinearLayout>