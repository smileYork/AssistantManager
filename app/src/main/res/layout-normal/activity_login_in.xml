<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" >

        <ImageView
            android:id="@+id/img_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/log" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_login_title"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:text="券卡微助理"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_layout_select"
            android:padding="8dp" >

            <TextView
                android:id="@+id/tv_login_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:text="账户:"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_login_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_login_user"
                android:background="@android:drawable/edit_text"
                android:ems="40"
                android:hint="请输入账户名"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_layout_select"
            android:padding="8dp" >

            <TextView
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:text="密码:"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_login_user_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_login_password"
                android:background="@android:drawable/edit_text"
                android:ems="40"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:padding="8dp" >

            <Button
                android:id="@+id/bt_login_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_set"
                android:text="登录"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_login_forget_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_login_submit"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:padding="6dp"
                android:text="忘记密码？"
                android:textColor="@color/title"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>